<Window x:Class="Formulario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Formulario"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid RenderTransformOrigin="0.626,0.593">
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="142,38,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Verdana"/>
        <Label Content="Edad" HorizontalAlignment="Left" Margin="142,90,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Verdana"/>
        <TextBox x:Name="nombre" HorizontalAlignment="Left" Margin="242,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Foreground="#FF1600FF" Height="25" FontFamily="Arial" FontSize="16" Background="White" TextChanged="txtNombre"/>
        <TextBox x:Name="edad" HorizontalAlignment="Left" Margin="242,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Foreground="#FF3100FF" Height="25" FontSize="16" FontFamily="Arial" TextChanged="txtEdad" MaxLines="1" MaxLength="3" FontWeight="Bold" Text=""/>
        <Button Content="Ingresar" HorizontalAlignment="Left" Margin="142,169,0,0" VerticalAlignment="Top" Height="61" Width="111" Click="b_ingresar" FontFamily="Arial" FontSize="16"/>
        <Button Content="Borrar" HorizontalAlignment="Left" Margin="289,169,0,0" VerticalAlignment="Top" Height="61" Width="111" Click="b_borrar" FontFamily="Arial" FontSize="16"/>
        <Label x:Name="L_resultado" Content="" HorizontalAlignment="Left" Margin="257,318,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Arial" Foreground="#FFAE0000" Background="White"/>

    </Grid>
</Window>
